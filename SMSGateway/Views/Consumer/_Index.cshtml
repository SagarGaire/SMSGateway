@model SMSGateway.Models.SMSClientAll
@{
    string code = ViewBag.Code;
}
<h2>Consumer Report</h2>
<br />

<script>
    $('.datepicker').datepicker({
        orientation: 'bottom',
        autoclose: true,
    })

    $('.client-list').multiselect({
        includeSelectAllOption: true,
        enableCaseInsensitiveFiltering: true,
        enableFiltering: true
    })
</script>

<div class="form-horizontal filters">

    @using (Html.BeginForm("_ConsumerReport", "Consumer", FormMethod.Post))
     {
        <div class="form-group">
            @if (code == "User")
             {
                <div class="div-client-filter col-md-4">
                    <fieldset>

                        <legend class="form-group col-md-12">
                            Client
                        </legend>

                        <div class="form-group col-md-12">

                            @Html.DropDownList("client", ViewBag.Client as SelectList, "All", new { @class = "form-control client-list" })

                            <br />
                        </div>

                        <legend class="form-group col-md-12">
                            Client Type
                        </legend>

                        <div class="col-md-8">
                            @Html.DropDownListFor(x => x.ClientType, new List<SelectListItem>
                                {
                                    new SelectListItem{Text="All", Value="A"},
                                    new SelectListItem{Text="Clients", Value="C"},
                                    new SelectListItem{Text="Non-Clients", Value ="N" }
                                }
                                , new { @class = "form-control clientType" })
                        </div>

                    </fieldset>
                </div>
            }
            <div class="div-datetime-filter col-md-4">
                <fieldset>
                    <legend class="form-group col-md-12">
                        Date/Time
                    </legend>
                    <div class="form-group col-md-12">
                        @Html.Label("From: ", htmlAttributes: new { @class = "control-label" })<br />
                        <div class="col-md-12">
                            @*<input type="text" class="form-control datepicker fromDate" placeholder="Date" />*@
                            @Html.EditorFor(x => x.FromDate, new { htmlAttributes = new { @class = "form-control datepicker fromDate", @placeholder = "Date" } })
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        @Html.Label("To: ", htmlAttributes: new { @class = "control-label" })<br />
                        <div class="col-md-12">
                            @*<input type="text" class="form-control datepicker toDate" placeholder="Date" />*@
                            @Html.EditorFor(x => x.ToDate, new { htmlAttributes = new { @class = "form-control datepicker toDate", @placeholder = "Date" } })
                        </div>
                    </div>

                </fieldset>
            </div>

            <div class="col-md-4">
                <input type="button" class="btn btn-warning btnGenerateReport" value="Generate Report" />
            </div>
        </div>
     }

   
</div>

<div class="consumer">

</div>
