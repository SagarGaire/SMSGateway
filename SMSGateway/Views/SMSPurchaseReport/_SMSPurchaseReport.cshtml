@model IEnumerable<SMSGateway.Models.spSMSPurchaseReport_Result>

@{
    DateTime? fromDate = ViewBag.FromDate;
    DateTime? toDate = ViewBag.ToDate;
    int supplier = ViewBag.SupplierId;
}

<br />
<hr />

<div class="form-horizontal col-md-12">
    <div class="form-group">
        <div class="col-md-3 bg-red" style="">
            <!-- small box -->
            <div class="small-box">
                <div class="inner col-md-12 text-center">
                    <h4><b>Total Quantity</b></h4>
                    <div class="inner col-md-12">
                        <p class="text-bold" style="font-size: 28px;">@ViewBag.TotalQuantity</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pricetag"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 bg-green">
            <!-- small box -->
            <div class="small-box">
                <div class="inner col-md-12 text-center">
                    <h4><b>Total Amount</b></h4>
                    <div class="inner col-md-12">
                        <p class="text-bold" style="font-size: 28px;">@ViewBag.TotalAmount</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-social-usd"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="table-container tbl-refill-report">
    <h3>SMS Purchase Report</h3>
    <table class="table table-striped table-refill">
        <tr>
            <th>Supplier ID</th>
            <th>Supplier Name</th>
            <th>Purchase Date</th>
            <th>Quantity</th>
            <th>Rate</th>
            <th>Amount</th>
            <th>Entry By</th>
            <th>Invoice Number</th>
            <th>Remarks</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Supplier</td>
                <td>@item.SupplierName</td>
                <td>@item.PurchaseDate</td>
                <td>@item.Quantity</td>
                <td>@item.Rate</td>
                <td>@item.Amount</td>
                <td>@item.EntryBy</td>
                <td>@item.BillNo</td>
                <td>@item.Remarks</td>
            </tr>
        }
    </table>
</div>





