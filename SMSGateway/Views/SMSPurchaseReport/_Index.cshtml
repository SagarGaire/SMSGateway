@model SMSGateway.Models.Report_SMSPurchase
    @{
        string code = ViewBag.Code;
    }
    <script>
        $('.datepicker').datepicker({
            orientation: 'bottom',
            autoclose: true,
        })

        $('.supplier-list').multiselect({
            includeSelectAllOption: true,
            enableCaseInsensitiveFiltering: true,
            enableFiltering: true
        })
    </script>

    <h2>SMS Purchase Report</h2>
    <br />


    @using (Html.BeginForm("ExportToExcel", "SMSPurchaseReport", FormMethod.Post))
    {
        <div class="form-group col-md-12 div-supplier-filter">
            @if (code == "User")
            {
            <div class="">
                <label class="form-group col-md-2">
                    Supplier:
                </label>
                <div class="sms-purchase-report-dropdown form-group col-md-2">
                    @Html.DropDownList("supplier", @ViewBag.Supplier as List<SelectListItem>, new { @class = "form-control supplier-list" })

                </div>
                @*<div class="form-group col-md-12">
                    @Html.DropDownList("Supplier", null, new { @class = "form-control supplier-list", multiple = "multiple" })
                </div>*@
            </div>
            }
        </div>
        <div class="form-group col-md-12 div-datetime-sms-pr-filter">
                <div class="form-group col-md-4">
                    <label>Purchase Date:</label>
                </div>
                <div class="sms-purchase-report-fromDate form-group col-md-3">
                    @Html.EditorFor(x => x.FromDate, new { htmlAttributes = new { @class = "form-control datepicker fromDate", @placeholder = "YYYY-MM-DD" } })
                </div>
                <div class="sms-purchase-report-to form-group col-md-1">
                    @Html.Label("to", htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="sms-purchase-report-toDate form-group col-md-3">
                    @Html.EditorFor(x => x.ToDate, new { htmlAttributes = new { @class = "form-control datepicker toDate", @placeholder = "YYYY-MM-DD" } })
                </div>
        </div>
        <div class="form-group col-md-12">
            <input type="button" class="btn btn-warning btnGenerateSPReport" value="Generate Report" />
            <input type="submit" class="btn btn-warning btnExportSMSPurchaseReport" value="Export" formtarget="_blank" />
        </div>
    }

    <br>

    <div class="sms-purchase-report">

    </div>
