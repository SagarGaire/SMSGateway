@model List<SMSGateway.Models.spReportSMSStmt_Result>

@{ 
    var totalDebitSMS = ViewBag.TotalDebitSMS;
    var totalCreditSMS = ViewBag.totalCreditSMS;
    var totalDebitAmount = ViewBag.TotalDebitAmount;
    var totalCreditAmount = ViewBag.TotalCreditAmount;
    var totalRows = ViewBag.TotalRows;
    var selectedRows = ViewBag.SelectedRows;
}
<br />
<hr />

<div class="form-horizontal">
    <div class="form-group">

        <div class="col-md-3">
            <!-- small box -->
            <div class="small-box bg-red">
                <div class="inner">
                    <h3>@totalDebitSMS</h3>

                    <p>Total Debit SMS</p>
                </div>
                <div class="icon">
                    <i class="ion ion-card"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <!-- small box -->
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>@totalCreditSMS</h3>

                    <p>Total Credit SMS</p>
                </div>
                <div class="icon">
                    <i class="ion ion-cash"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <!-- small box -->
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>@totalDebitAmount</h3>

                    <p>Total Debit Amount</p>
                </div>
                <div class="icon">
                    <i class="ion ion-pricetag"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>@totalCreditAmount</h3>

                    <p>Total Credit Amount</p>
                </div>
                <div class="icon">
                    <i class="ion ion-social-usd"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="table-container">

    @if (Model.Count > 0)
    {
        <table class="table table-striped table-statement">
            <tr>
                <th class="th-image"></th>
                <th class="th-sn">SN</th>
                <th class="th-date">Date</th>
                <th class="th-trn-desc">Transaction</th>
                <th class="th-debit">Debit (SMS)</th>
                <th class="th-credit">Credit (SMS)</th>
                <th class="th-debit-amount">Debit (Amount)</th>
                <th class="th-credit-amount">Credit (Amount)</th>
                <th class="th-sms-balance">SMS Count</th>
                <th class="th-balance">Balance (Amount)</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="td-image">
                        @if (item.Debit == 0)
                        {
                            <img src="~/Images/Credit.png" />
                        }
                        else
                        {
                            <img src="~/Images/Debit.png" />
                        }
                    </td>
                    <td class="td-sn">@item.SN</td>
                    <td class="td-date">@item.FormattedDateTime.ToString("yyyy-MM-dd HH:mm:ss tt")</td>
                    <td class="td-trn-desc">@item.TrnDesc</td>
                    <td class="td-debit">@item.FormattedDebitSMS </td>
                    <td class="td-credit">@item.FormattedCreditSMS</td>
                    <td class="td-debit-amount">@item.FormattedDebitAmt </td>
                    <td class="td-credit-amount">@item.FormattedCreditAmt</td>
                    <td class="td-sms-balance">@item.FormattedSMSBal</td>
                    <td class="td-balance">@item.FormattedBalance</td>
                </tr>
                            }
            @if (totalRows > selectedRows)
            {
                <tr>
                    <td class="td-load-more" colspan="10">Load More</td>
                </tr>
            }
        </table>
                            }
                            else
                            {
                                <b>No records could be found</b>
                            }
</div>



