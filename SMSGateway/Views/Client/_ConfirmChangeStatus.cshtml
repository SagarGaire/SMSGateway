@{ 
    var ClientCode = ViewBag.ClientCode;
}

@Html.HiddenFor(x=> ClientCode)

<div class="form-horizontal">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Change Client Status</h4>
    </div>
    <br />
        <div id="modal-body change-status-modal-body" class="modal-body change-status-modal-body">
            @Html.Label("Are you sure you want to change this client status from the directory?")
        </div>

        <div class="successmessage form-group" style="color: green; padding-left: 100px;">

        </div>    

        <div class="modal-footer">
            <input type="button" value="Change" class="btn btn-warning change-status" />
            <button type="button" class="btn btn-warning btnCancel" data-dismiss="modal">Cancel</button>
        </div>
</div>
