@model SMSGateway.Models.Report_Revenue
@{
    string code = ViewBag.Code;
}

<script>
    $('.datepicker').datepicker({
        orientation: 'bottom',
        autoclose: true,
    })
</script>

<h2>Revenue Report</h2>
<br />

@using (Html.BeginForm("ExportToExcel", "RevenueReport", FormMethod.Post))
{
    <div style="width: 50%;">
        <div class="col-md-2">
            <label>Date:</label>
        </div>
        <div class="form-group col-md-10">
            <div class=" revenue-report-fromDate col-md-3" style="left: 5px; width: 115px;">
                @Html.EditorFor(x => x.FromDate, new { htmlAttributes = new { @class = "form-control datepicker fromDate", @Value = DateTime.Now.ToString("yyyy-MM-dd") } })
            </div>
            <div class="revenue-report-To col-md-1" style="left: 5px; margin-top: 5px; margin-bottom: 5px;">
                @Html.Label("to", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class=" revenue-toDate col-md-3" style="left: 5px; width: 115px;">
                @Html.EditorFor(x => x.ToDate, new { htmlAttributes = new { @class = "form-control datepicker toDate", @Value = DateTime.Now.ToString("yyyy-MM-dd") } })
            </div>
        </div>
    </div>


    <div class="form-group col-md-12">
        <input type="button" class="btn btn-warning btnGenerateRevenueReport" value="Generate Report" />
        <input type="submit" class="btn btn-warning btnExportRevenueReport" value="Export" formtarget="_blank" />
    </div>
}

<br>

<div class="revenue-report">

</div>