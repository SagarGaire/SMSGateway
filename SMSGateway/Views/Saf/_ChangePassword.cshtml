@model SMSGateway.Models.Password

<div class="form-horizontal">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Change Password</h4>
    </div>
    <br />

    @using (Ajax.BeginForm("ChangePassword", "Saf", new AjaxOptions
    {
        HttpMethod = "POST",
        OnSuccess = "ChangePasswordSuccess",
        InsertionMode = InsertionMode.Replace
    }, new { @id = "form" }))
    {
        <div id="modal-body" class="modal-body change-password-modal-body">
            <div class="form-group">
                @Html.LabelFor(model => model.CurrentPassword, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-5">
                    @Html.EditorFor(x => x.CurrentPassword, new { htmlAttributes = new { @class = "form-control" } } )
                    @Html.ValidationMessageFor(x=>x.CurrentPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.NewPassword, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-5">
                    @Html.EditorFor(x => x.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.NewPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-5">
                    @Html.EditorFor(x => x.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>    
            <div class="form-group">
                <div class="div-model-error">
                    
                </div>
            </div>        
        </div>

        <div class="modal-footer">
            <input type="submit" value="Change" class="btn btn-warning btn-submit-change-password" />
            <button type="button" class="btn btn-warning btnCancel" data-dismiss="modal">Cancel</button>
        </div>
    }
</div>
