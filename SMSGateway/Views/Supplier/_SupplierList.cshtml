@model List<SMSGateway.Models.Suppliers>


@{ var i = 1; }
<h2>Supplier List</h2>

<div>
    <input type="button" class="btn btn-warning supplier-add" value="Add" style="margin-bottom: 15px;" />
</div>

<div class="table-container">
    <table class="table table-striped table-supplier">
        <tr>
            <th>SN</th>
            <th>Supplier Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
        @if (Model.Count == 0)
        {
<tr>
    <td><b>There are no suppliers currently.</b></td>
</tr> }
            else
            {
                foreach (var item in Model)
                {
<tr supplierID=@item.SupplierId editMode=false>
    <td>
        @i
        @{ i = i + 1; }
    </td>
    <td class="SupplierName" style="cursor:pointer;">@item.SupplierName</td>
    <td>@item.Email</td>
    <td class="td-status">
        @if (item.Status == 1)
        {
<img alt="Active" src="@Url.Content("~/Images/active.jpg")"> }
                    else
                    {
<img alt="Active" src="@Url.Content("~/Images/inactive.jpg")">}
    </td>

    <td class="td-action">
        <ul class="links">
            <li class="supplier-edit" style="cursor: pointer" data-toggle="tooltip" data-placement="bottom" title="Edit">
                <img alt="Edit" src="@Url.Content("~/Images/edit-icon.png")">

            <li class="supplier-remove" style="cursor: pointer" data-toggle="tooltip" data-placement="bottom" title="Delete">
                <img alt="Delete" src="@Url.Content("~/Images/delete-icon.png")">
            </li>

        </ul>
    </td>
</tr>}
            }

    </table>
</div>


