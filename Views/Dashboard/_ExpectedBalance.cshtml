@model List<SMSGateway.Models.vwExpectedBalance>
 @*<style>
     table, th, td {
         border: 1px solid black;}
 </style>*@
    
    

<div class="form-horizontal">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Expected Balance</h4>
    </div>
   
    <div class="table-container">
        <table class="table table-striped table-expected-balance">
            <tr class="parent">
                <th>Supplier Id</th>
                <th>Supplier Name</th>
                <th>SMS Purchased</th>
                <th>Average Rate</th>
                <th>Credits Consumed</th>
                <th>Balance</th>
            </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.SupplierId</td>
                <td>@item.SupplierName</td>
                <td>@item.Quantity</td>
                <td>@item.AverageRate</td>
                <td>@item.CreditsUsed</td>
                <td>@item.Balance</td>
            </tr>
            }
            </table>
    </div>
</div>