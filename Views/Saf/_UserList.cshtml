@model List<SMSGateway.Models.Saf>

@{
    var i = 1;
    var session = ViewBag.Session;
}
<h2>Clients</h2>

@if (session == "1")
{
    <div>
        <input type="button" class="btn btn-warning btn-add-user-modal" value="Add User" style="margin-bottom: 15px;" />
    </div>
}

<div class="table-container">
    <table class="table table-striped table-user">
        <tr>
            <th>SN</th>
            <th>Full Name</th>
            <th>Username</th>
            <th class="th-status">Status</th>
            <th class="th-level">Level</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
        @if (Model.Count == 0)
        {
            <tr>
                <td>There are no clients registered.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr username=@item.Username editMode=false>
                    <td>
                        @i
                        @{
                            i = i + 1;
                        }
                    </td>
                    <td>@item.FullName</td>
                    <td class="col-md-4 td-username" style="cursor:pointer;">@item.Username</td>
                    <td class="td-status">
                        @if (item.Status == 1)
                        {
                            <img alt="Active" src="@Url.Content("~/Images/active.jpg")">
                        }
                        else
                        {
                            <img alt="Active" src="@Url.Content("~/Images/inactive.jpg")">
                        }
                    </td>
                    <td class="td-level">@item.Level</td>
                    <td>@item.EmailId</td>
                    @if (session == "1" || session == "2")
                    {
                        <td class="td-action">
                            <ul class="links">
                                <li class="user-edit" style="cursor: pointer" data-toggle="tooltip" data-placement="bottom" title="Edit">
                                    <img alt="Edit" src="@Url.Content("~/Images/edit-icon.png")">
                                </li>
                            </ul>
                        </td>
                    }
                    else
                    {
                        <td></td>
                    }
                </tr>
                                }
                            }
    </table>
</div>


